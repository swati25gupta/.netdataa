<Window x:Class="SampleWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" Margin="5">
        <Label FontSize="40" HorizontalAlignment="Center">Employee Registration</Label>
        <WrapPanel Margin="5">
            <Label>Enter the Name:</Label>
            <TextBox Name="txtName" MinWidth="300"/>
        </WrapPanel>
        <WrapPanel Margin="5">
            <Label>Enter the Address:</Label>
            <TextBox Name="txtAddress" MinWidth="300"/>
        </WrapPanel>
        <WrapPanel Margin="5">
            <Label>Enter the Salary:</Label>
            <TextBox Name="txtSalary" MinWidth="300"/>
        </WrapPanel>
        <WrapPanel Margin="5">
            <Button Margin="5" Click="Button_Click">Save</Button>
            <Button Margin="5">Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
